{
  "name": "friendsoft",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --report-unused-disable-directives",
    "preview": "vite preview",
    "dev:ssr": "tsx src/ssr/server.ts",
    "build:ssr": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr src/ssr/entry-server.tsx --outDir dist/server",
    "preview:ssr": "cross-env NODE_ENV=production tsx src/ssr/server.ts",
    "lighthouse": "lhci autorun",
    "lighthouse:collect": "lhci collect",
    "lighthouse:assert": "lhci assert",
    "lighthouse:upload": "lhci upload",
    "performance:check": "npm run build:ssr && npm run lighthouse",
    "performance:local": "node scripts/performance-check.js",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "optimize:imports": "node scripts/optimize-imports.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/express": "^5.0.3",
    "@types/leaflet": "^1.9.20",
    "@types/node": "^24.3.0",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "framer-motion": "^12.23.12",
    "i18next": "^23.5.1",
    "i18next-browser-languagedetector": "^7.1.0",
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^13.2.2",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.16.0",
    "sirv": "^3.0.1",
    "tsx": "^4.20.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@types/compression": "^1.8.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.16",
    "cross-env": "^10.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "globals": "^16.3.0",
    "postcss": "^8.4.30",
    "tailwindcss": "^3.3.3",
    "terser": "^5.43.1",
    "typescript": "^5.0.2",
    "typescript-eslint": "^8.38.0",
    "vite": "^4.4.5"
  }
}
